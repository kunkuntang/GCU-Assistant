/**index.wxss**/
.book{
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.book .book-pic-con{
  flex: 1; 
  text-align: center;
}

.book .book-pic{
  width: 100rpx;
  height: 100rpx;
}

.book .book-content{
  flex: 3;
  display: inline-flex;
  display: -webkit-inline-flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 30rpx;
}

.book .select-con{
  text-align: center;
  flex: 1;
}

.opertion-con {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.opertion-con .sum-price {
  font-size: 14px;
  margin-left: 50rpx;
}

.opertion-con .price {
  font-size: 18px;
  color: red;
  margin-right: 10rpx;
}

.opertion-con .submit-btn {
  float: right;
  margin-right: 40rpx;
}