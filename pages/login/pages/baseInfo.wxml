<template name="baseInfo">
  <view class="form-con">
    <view class="input-group">
      <label class="title">学号：</label>
      <view class="input-con">
        <input class="input" type="text" placeholder="请输入代号" confirm-type="next" maxlength="12" />
      </view>
    </view>
    <view class="input-group">
      <label class="title">姓名：</label>
      <view class="input-con">
        <input class="input" type="text" placeholder="请输入代号" confirm-type="next" maxlength="12" />
      </view>
    </view>
  </view>
  <view class="operate-panel">
    <!--<button bindtap="pre" class="pre" size="mini" hidden="{{step === 0}}">上一步</button>-->
