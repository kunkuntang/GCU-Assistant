<map id="myMap" longitude="{{curLongitude}}" latitude="{{curLatitude}}" scale="14" controls="{{controls}}" markers="{{markers}}" polyline="{{polyline}}" show-location style="width: 100%; height: 300px;"></map>

<view class="section">
   <!-- <view class="section__title">校内地址</view>  -->
  <!-- <view class="section__desc">饭堂</view> -->
  <scroll-view scroll-y style="height: 200px;">
    <view class="weui-panel">
      <block>
        <view class="weui-panel__hd">校内地址</view>
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_small-appmsg">
            <view class="weui-cells weui-cells_in-small-appmsg">
              <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:for="{{locationList}}"  wx:key="{{key}}" bindtap='selectLocation' data-cateIndex='{{index}}'>
                <view class="weui-cell__hd">
                  <image src="{{item.icon}}" style="width: 20px;height: 20px;margin-right: 5px" />
                </view>
                <view class="weui-cell__bd weui-cell_primary">
                    <view style='font-size: 14px;'>{{item.cateName}}</view>
                </view>
                <image src='/images/location.svg' class="weui-cell__ft weui-cell__ft_location" wx:if="{{item.selected}}"></image> 
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
</view>