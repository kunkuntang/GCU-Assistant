<view class='page'>

  <view class='page__bd page__bd_spacing'>
    <view class='avatar-con'>
      <image style='width: 200rpx; height: 200rpx;' mode='aspectFit' src='{{src}}'></image>
    </view>
    <navigator url='/pages/login/login' open-type='navigate'>点击设置班级</navigator> 
     <!-- <text>14级软件4班</text>  -->
  </view>

  <view class="page__bd page__bd_spacing">
    <view class="weui-grids">
      <block wx:for="{{grids}}" wx:key="*this">
        <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/home.png" />
          <view class="weui-grid__label">{{item.name}}</view>
        </navigator>
      </block>
    </view>
  </view>

</view>