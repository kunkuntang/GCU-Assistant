<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text>欢迎使用</text>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="section">
    <view class="section-btn-con">
      <picker bindchange="bindSelectCollege" value="{{collegeIdx}}" range="{{collegeArray}}">
        <button size="mini">{{collegeBtnText}}</button>
      </picker>
    </view>
    <view class="section-btn-con">
      <picker mode="selector" bindchange="bindSelectMajor" value="{{majorIdx}}" range="{{majorArray[collegeIdx]}}">
        <button size="mini">{{majorBtnText}}</button>
      </picker>
    </view>
    <view class="picker">
      {{collegeArray[collegeIdx]}}=>{{majorArray[collegeIdx][majorIdx]}}
    </view>
  </view>
  <view class="operate-panel">
    <navigator url="/pages/index/index" hover-class="navigator-hover">
      <button>确定</button>
    </navigator>
  </view>
</view>